
= simple_form_for @user , url: {action: 'dashboard' ,:data => 'education'} , remote: true  do |f| 
	h3 Educations
		
	= f.simple_fields_for :educations do |edu|
		= render 'education_fields' , f: edu 
	.links
		= link_to_add_association 'add education', f, :educations

	= f.button :submit 
	




  
